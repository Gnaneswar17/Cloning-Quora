<form action="/user/register" method="POST">
    <label for="fname">First Name :</label>
    <input name= "fname" type="text" required placeholder="Enter your First Name"><br><br>

    <label for="lname">Last Name :</label>
    <input name= "lname" type="text" required placeholder="Enter your Last Name"><br><br>

    <label for="DOB">DOB :</label>
    <input name= "DOB" type="date" required placeholder="Enter your Name"><br><br>

    <label for="gender">Gender :</label>
    <input type="radio" id="male" name="gender" value="male">
    <label for="male">Male</label>
    <input type="radio" id="female" name="gender" value="female">
    <label for="female">Female</label><br><br>
  

    <label for="email">Email :</label>
    <input name= "email"type="email" required placeholder="Enter your Email"><br><br>

    <label for="password">Password :</label>
    <input name= "password" type="password" required placeholder="Enter your Password" id='signup_password'><br><br>

    <label for="confirm-password">Confirm Password :</label>
    <input name= "confirm-password" type="password" required placeholder="Re-Enter your Password" id='signup_cp'><br><br>

    <button>Register</button>
</form>